<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="end"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/root_right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/fugu_margin_45"
        android:layout_marginRight="@dimen/fugu_margin_45"
        android:orientation="horizontal"
        android:paddingTop="@dimen/fugu_margin_1"
        android:paddingBottom="@dimen/fugu_margin_1">

        <ImageView
            android:id="@+id/user_image"
            style="@style/user_image"
            android:layout_width="30dp"
            android:layout_height="30dp" />

        <TextView
            android:id="@+id/tvUserName"
            style="@style/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginEnd="5dp"
            android:layout_toRightOf="@+id/user_image"
            android:gravity="start"
            android:singleLine="true"
            android:text="Gurmail"
            android:layout_marginRight="5dp"
            android:layout_toEndOf="@+id/user_image" />

        <LinearLayout
            android:id="@+id/llMessageBgLeft"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_below="@+id/tvUserName"
            android:layout_toRightOf="@+id/user_image"
            android:background="@drawable/hippo_chat_special_bg"
            android:gravity="start"
            android:orientation="vertical"
            android:paddingTop="@dimen/fugu_margin_4"
            android:paddingBottom="@dimen/fugu_margin_4"
            android:layout_marginEnd="20dp"
            android:layout_toEndOf="@+id/user_image">


            <com.hippo.utils.MyTextView
                android:id="@+id/tvMsg"
                style="@style/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/fugu_padding_12"
                android:paddingLeft="@dimen/fugu_padding_12"
                android:paddingTop="@dimen/fugu_dp_8"
                android:paddingEnd="@dimen/fugu_dp_8"
                android:paddingRight="@dimen/fugu_dp_8"
                android:textColor="@color/fugu_primary_text_msg_from"
                android:textColorLink="@color/fugu_primary_text_msg_from"
                android:textIsSelectable="true"
                android:textSize="@dimen/fugu_text_size_medium" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/fugu_margin_6"
                android:layout_marginEnd="@dimen/fugu_margin_6"
                android:layout_marginRight="@dimen/fugu_margin_6"
                android:paddingStart="@dimen/fugu_padding_12"
                android:paddingLeft="@dimen/fugu_padding_12"
                android:paddingTop="6dp"
                android:paddingRight="10dp"
                android:paddingBottom="1dp"
                android:visibility="visible"
                android:paddingEnd="10dp" />

            <Button
                android:id="@+id/select_Btn"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/fugu_margin_10"
                android:layout_marginBottom="5dp"
                android:background="@drawable/hippo_button_theme_round"
                android:foreground="?android:attr/selectableItemBackground"
                android:paddingLeft="80dp"
                android:paddingRight="80dp"
                android:text="Submit"
                android:textAllCaps="false"
                android:textColor="@color/fugu_white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvTime"
                style="@style/text_rtl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_marginRight="@dimen/fugu_margin_5"
                android:layout_marginBottom="@dimen/fugu_margin_3"
                android:breakStrategy="simple"
                android:paddingStart="@dimen/fugu_padding_3"
                android:paddingLeft="@dimen/fugu_padding_3"
                android:paddingEnd="@dimen/fugu_margin_5"
                android:paddingRight="@dimen/fugu_margin_5"
                android:textColor="@color/fugu_secondary_text_msg_you"
                android:textSize="@dimen/hippo_text_time"
                android:layout_marginEnd="@dimen/fugu_margin_5" />

        </LinearLayout>

    </RelativeLayout>


</LinearLayout>