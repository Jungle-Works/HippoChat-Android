<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/hippo_transparent"
        android:orientation="vertical">

    <View
            android:layout_width="40dp"
            android:layout_height="4dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/fugu_margin_10"
            android:layout_marginBottom="@dimen/fugu_margin_10"
            android:background="@drawable/curved_bg_button"
            android:backgroundTint="@color/fugu_white" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_bottom_sheet"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="@dimen/fugu_margin_10">


        <LinearLayout
                android:id="@+id/edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:orientation="horizontal"
                android:paddingTop="18dp"
                android:paddingBottom="12dp"
                android:visibility="visible">

            <ImageView
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_marginStart="@dimen/fugu_margin_12"
                    android:layout_marginLeft="@dimen/fugu_margin_12"
                    android:layout_marginEnd="@dimen/fugu_margin_12"
                    android:layout_marginRight="@dimen/fugu_margin_12"
                    android:src="@drawable/hippo_ic_writing"
                    android:textColor="@color/hippo_black"
                    android:tint="#737373" />

            <TextView
                    android:id="@+id/ivEditTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Edit Message"
                    android:textColor="@color/hippo_black"
                    android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
                android:id="@+id/copy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:orientation="horizontal"
                android:paddingTop="18dp"
                android:paddingBottom="12dp">

            <ImageView
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_marginStart="@dimen/fugu_margin_12"
                    android:layout_marginLeft="@dimen/fugu_margin_12"
                    android:layout_marginEnd="@dimen/fugu_margin_12"
                    android:layout_marginRight="@dimen/fugu_margin_12"
                    android:src="@drawable/copy_bottom_sheet"
                    android:textColor="@color/hippo_black" />

            <TextView
                    android:id="@+id/copyTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Copy"
                    android:textColor="@color/hippo_black"
                    android:textSize="16dp" />

        </LinearLayout>

        <LinearLayout
                android:id="@+id/delete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:orientation="horizontal"
                android:paddingTop="12dp"
                android:paddingBottom="18dp"
                android:visibility="visible">

            <ImageView
                    android:layout_width="26dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="@dimen/fugu_margin_12"
                    android:layout_marginLeft="@dimen/fugu_margin_12"
                    android:layout_marginEnd="@dimen/fugu_margin_12"
                    android:layout_marginRight="@dimen/fugu_margin_12"
                    android:src="@drawable/ic_delete_forever"
                    android:tint="@color/hippo_red" />

            <TextView
                    android:id="@+id/tvDelete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Delete Message"
                    android:textColor="@color/hippo_red"
                    android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>