<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <RelativeLayout
            android:id="@+id/rlRoot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/_11sdp"
            android:paddingTop="@dimen/_10sdp"
            android:paddingRight="@dimen/_11sdp"
            android:paddingBottom="@dimen/_10sdp">

        <LinearLayout
                android:id="@+id/icon_layout"
                android:layout_width="@dimen/_41sdp"
                android:layout_height="@dimen/_41sdp"
                android:layout_marginEnd="@dimen/_11sdp"
                android:layout_marginRight="@dimen/_11sdp"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

            <ImageView
                    android:id="@+id/ivChannelIcon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:src="@drawable/hippo_ring_grey"
                    android:visibility="visible"/>

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/icon_layout"
                android:layout_toRightOf="@+id/icon_layout"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingTop="@dimen/_2sdp"
                android:paddingBottom="@dimen/_2sdp">

            <RelativeLayout
                    android:id="@+id/title_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_1sdp"
                    android:layout_alignParentTop="true">

                <TextView
                        android:id="@+id/tvChannelName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_toStartOf="@+id/tvDate"
                        android:layout_toLeftOf="@+id/tvDate"
                        android:singleLine="true"
                        android:text="asdfghj asdfgh sdfgh"
                        android:textAppearance="@style/TextViewBold"
                        android:textColor="@color/fugu_text_color_primary"
                        android:textDirection="locale"
                        android:textSize="16sp"
                        tools:ignore="UnusedAttribute"/>


                <TextView
                        android:id="@+id/tvDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="center_vertical"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:text="12/21/18"
                        android:textColor="@color/fugu_channel_date_text"
                        android:textSize="12sp"/>

            </RelativeLayout>

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/title_layout"
            >

                <TextView
                        android:id="@+id/tvMessage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_toLeftOf="@+id/llcircularTvMessage"
                        android:ellipsize="end"
                        android:gravity="top"
                        android:maxLines="1"
                        android:text="this is a text message for demo"
                        android:textAppearance="@style/TextViewBold"
                        android:textColor="@color/fugu_text_color_primary"
                        android:textSize="14sp"/>


                <LinearLayout
                        android:id="@+id/llcircularTvMessage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:orientation="horizontal">

                    <TextView
                            android:id="@+id/circularTvMessageCount"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_18sdp"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/hippo_bg_unread_count"
                            android:gravity="center"
                            android:minWidth="@dimen/_24sdp"
                            android:paddingLeft="@dimen/_5sdp"
                            android:paddingRight="@dimen/_5sdp"
                            android:text="1"
                            android:textColor="@color/hippo_white"
                            android:textSize="10sp"
                            android:visibility="visible"/>

                    <TextView
                            android:id="@+id/closed"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:gravity="bottom"
                            android:paddingLeft="@dimen/_5sdp"
                            android:paddingRight="@dimen/_5sdp"
                            android:text="Close"
                            android:textColor="@color/fugu_channel_date_text"
                            android:textSize="@dimen/_13ssp"
                            android:visibility="gone"/>

                </LinearLayout>


            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>