<?xml version="1.0" encoding="utf-8"?>
<com.hippo.utils.swipetoshow.SwipeHolder xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <com.hippo.utils.swipetoshow.HideContentHolder
            android:layout_width="@dimen/fugu_dp_60"
            android:layout_height="match_parent">

        <Button
                android:id="@+id/clearBtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/fugu_margin_10"
                android:layout_marginBottom="@dimen/fugu_margin_2"
                android:background="@color/hippo_red"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:text="@string/hippo_clear"
                android:textColor="#ffffff" />

    </com.hippo.utils.swipetoshow.HideContentHolder>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/hippo_transparent"
            android:orientation="vertical">

        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/fugu_margin_10"
                android:layout_marginTop="@dimen/fugu_margin_10"
                android:layout_marginRight="@dimen/fugu_margin_10"
                android:layout_marginBottom="@dimen/fugu_margin_2"
                android:visibility="visible"
                app:cardCornerRadius="@dimen/_6sdp"
                app:cardElevation="0dp">

            <LinearLayout
                    android:id="@+id/mainLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_12sdp">

                <TextView
                        android:id="@+id/tvTitle"
                        style="@style/CustomTextAppearance.Semibold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/hippo_notification_header"
                        android:textSize="@dimen/fugu_text_size_normal" />

                <TextView
                        android:id="@+id/tvDescription"
                        style="@style/CustomTextAppearance.TitilliumWeb"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:autoLink="all"
                        android:textColorLink="@color/hippo_hyper_link"
                        android:textColor="@color/hippo_notification_message"
                        android:textSize="@dimen/hippo_text_normal"
                        android:visibility="gone" />

                <TextView
                        android:id="@+id/tvMsg"
                        style="@style/CustomTextAppearance.TitilliumWeb"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:autoLink="all"
                        android:maxLines="4"
                        android:textColorLink="@color/hippo_hyper_link"
                        android:textColor="@color/hippo_notification_message"
                        android:textSize="@dimen/hippo_text_normal"
                        android:visibility="visible" />


                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp">

                    <TextView
                            android:id="@+id/tvDateTime"
                            style="@style/CustomTextAppearance.TitilliumWeb"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:textColor="@color/hippo_notification_time"
                            android:textSize="@dimen/fugu_text_size_small" />


                    <TextView
                            android:id="@+id/readStatus"
                            style="@style/CustomTextAppearance.TitilliumWeb"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:gravity="top"
                            android:minHeight="1dp"
                            android:text="...read more"
                            android:textColor="@color/hippo_notification_read_more"
                            android:layout_alignParentRight="true" />


                </RelativeLayout>


                <ImageView
                        android:id="@+id/ivImage"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_130sdp"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:visibility="gone" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>


</com.hippo.utils.swipetoshow.SwipeHolder>



