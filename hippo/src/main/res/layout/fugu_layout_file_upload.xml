<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/llFileRoot"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/hippo_chat_bg_right_normal"
              android:gravity="center_vertical"
              android:minHeight="40dp"
              android:orientation="horizontal"
              android:paddingLeft="@dimen/fugu_padding_5"
              android:paddingRight="@dimen/fugu_padding_10">

    <ImageView
            android:id="@+id/ivFileType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/fugu_padding_10"
            android:src="@drawable/hippo_pdf_attachment"/>

    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/fugu_margin_5"
            android:layout_marginRight="@dimen/fugu_margin_5"
            android:layout_weight="1"

            android:orientation="vertical">


        <TextView
                android:id="@+id/tvFileName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:maxLines="1"
                android:text="Hippo Test Item"
                android:textSize="@dimen/fugu_text_size_normal"/>

    </LinearLayout>


    <ImageView
            android:id="@+id/ivUpload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/hippo_upload_file_retry"
            android:visibility="invisible"/>

    <RelativeLayout
            android:id="@+id/rlStopUpload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone">

        <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:indeterminateDrawable="@drawable/hippo_bg_file_progress"/>

        <View
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_centerInParent="true"
                android:background="@drawable/fugu_stop_file_operation"/>
    </RelativeLayout>
</LinearLayout>