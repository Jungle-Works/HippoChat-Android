<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
            android:id="@+id/llMessageLayout"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:background="@color/fugu_white"
            android:elevation="@dimen/_2sdp"
            android:orientation="horizontal">

        <RelativeLayout
                android:id="@+id/containerLayout"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_gravity="bottom"
                android:padding="@dimen/fugu_padding_8">

            <ImageView
                    android:id="@+id/ivAttachment"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:onClick="onClick"
                    android:src="@drawable/fugu_ic_add_attachment"
                    android:visibility="visible" />

            <ImageView
                    android:id="@+id/iv_cancel_btn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:onClick="onClick"
                    android:src="@drawable/hippo_ic_delete"
                    android:visibility="gone" />

        </RelativeLayout>

        <EditText
                android:id="@+id/etMsg"
                style="@style/text_rtl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/pbSendingImage"
                android:layout_toLeftOf="@+id/pbSendingImage"
                android:layout_toEndOf="@+id/containerLayout"
                android:layout_toRightOf="@+id/containerLayout"
                android:background="@android:color/transparent"
                android:cursorVisible="true"
                android:gravity="center_vertical"
                android:hint="@string/fugu_send_message"
                android:inputType="textCapSentences|textMultiLine"
                android:maxHeight="100dp"
                android:maxLines="4"
                android:minHeight="50dp"
                android:paddingStart="@dimen/fugu_padding_5"
                android:paddingTop="@dimen/fugu_padding_5"
                android:paddingEnd="@dimen/fugu_padding_5"
                android:paddingBottom="@dimen/fugu_padding_5"
                android:scrollbars="vertical"
                android:singleLine="false"
                android:textColor="@android:color/black"
                android:textCursorDrawable="@null" />

        <ProgressBar
                android:id="@+id/pbSendingImage"
                style="@android:style/Widget.ProgressBar"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/fugu_margin_10"
                android:layout_toStartOf="@+id/ivSendBtn"
                android:layout_toLeftOf="@+id/ivSendBtn"
                android:visibility="gone" />

        <ImageView
                android:id="@+id/ivSendBtn"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/fugu_padding_10"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:onClick="onClick"
                android:background="@drawable/ic_send_btn_bg"
                android:src="@drawable/ic_new_send"
                android:layout_marginRight="@dimen/fugu_padding_10" />

    </RelativeLayout>
</merge>