<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center">

    <com.hippo.utils.loadingBox.ProgressWheel
        android:id="@+id/progress_wheel"
        android:layout_width="@dimen/fugu_margin_30"
        android:layout_height="@dimen/fugu_margin_30"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:visibility="visible"
        wheel:matProg_barColor="#8c8c8c"
        wheel:matProg_barWidth="@dimen/fugu_size_2"
        wheel:matProg_fillRadius="true"
        wheel:matProg_progressIndeterminate="false"/>

    <TextView
        android:id="@+id/tv_loading_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/fugu_loading"/>

</LinearLayout>