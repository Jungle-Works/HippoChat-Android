<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llFileRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/fugu_bg_preview"
    android:gravity="center_vertical"
    android:minHeight="40dp"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/fugu_padding_15"
    android:paddingRight="@dimen/fugu_padding_15">

    <ImageView
        android:id="@+id/ivFileType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/hippo_pdf_attachment" />

    <TextView
        android:id="@+id/tvFileName"
        style="@style/text_rtl"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/fugu_margin_5"
        android:layout_marginRight="@dimen/fugu_margin_5"
        android:layout_weight="1"
        android:ellipsize="end"
        android:text="565747467cdcdsc"
        android:textSize="@dimen/hippo_text_normal" />

    <ImageView
        android:id="@+id/ivDownload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/hippo_download_file_retry" />

    <RelativeLayout
        android:id="@+id/rlStopDownload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:indeterminateDrawable="@drawable/hippo_bg_file_progress" />

        <View
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:layout_centerInParent="true"
            android:background="@drawable/fugu_stop_file_operation" />
    </RelativeLayout>
</LinearLayout>