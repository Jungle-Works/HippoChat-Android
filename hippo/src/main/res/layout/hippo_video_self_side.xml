<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlRoot"
    android:layout_marginTop="@dimen/fugu_margin_20"
    android:paddingBottom="@dimen/fugu_margin_2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/self_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="55dp"
        android:layout_marginStart="55dp"
        android:orientation="vertical"
        android:gravity="end"
        >

        <LinearLayout
            android:id="@+id/llMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/hippo_chat_self_bg"
            android:padding="@dimen/fugu_dp_8"
            android:layout_below="@+id/tvName"
            android:layout_toLeftOf="@+id/user_image"
            android:orientation="vertical"
            android:layout_toStartOf="@+id/user_image">

            <com.hippo.customLayout.ChatRelativeLayout
                android:id="@+id/rlMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:child="@+id/llTime"
                app:parent="@+id/tvMsg">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvMsg"
                    style="@style/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/fugu_margin_2"
                    android:paddingTop="@dimen/fugu_margin_3"
                    android:textSize="@dimen/fugu_text_size_medium"
                    tools:text="The video call ended" />


            </com.hippo.customLayout.ChatRelativeLayout>

            <RelativeLayout
                android:id="@+id/llTime"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tvMsg"
                android:layout_marginTop="@dimen/fugu_margin_3"
                android:layout_gravity="end"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivCallIcon"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginTop="-2dp"
                        android:visibility="visible"
                        android:layout_gravity="center_vertical"
                        app:srcCompat="@drawable/ic_self_call_icon" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvDuration"
                        style="@style/sentText.time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/fugu_margin_2"
                        android:layout_marginStart="@dimen/fugu_margin_5"
                        android:breakStrategy="simple"
                        android:visibility="visible"
                        android:layout_marginLeft="@dimen/fugu_margin_5" />
                </LinearLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvTime"
                    style="@style/sentText.time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/fugu_margin_2"
                    android:layout_marginLeft="4dp"
                    android:layout_marginEnd="@dimen/fugu_margin_4"
                    android:breakStrategy="simple"
                    android:text="12:38 PM "
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/fugu_margin_4"
                    android:layout_alignParentEnd="true" />
            </RelativeLayout>

            <View
                android:id="@+id/dividerView"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="@dimen/fugu_margin_2"
                android:background="@color/divider_color" />

            <TextView
                android:id="@+id/callAgain"
                style="@style/title"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:gravity="center"
                android:text="@string/call_again"
                android:textAllCaps="false"
                android:textSize="16sp"
                />
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>