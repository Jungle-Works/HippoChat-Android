<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="end"
    android:orientation="vertical"
    android:paddingStart="@dimen/fugu_dp_17"
    android:paddingLeft="@dimen/fugu_dp_17"
    android:paddingTop="@dimen/fugu_dp_1"
    android:paddingBottom="@dimen/fugu_dp_1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_source_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/llImageMessage"
            android:layout_marginStart="@dimen/fugu_margin_3"
            android:layout_marginLeft="@dimen/fugu_margin_3"
            android:layout_marginEnd="@dimen/fugu_margin_6"
            android:layout_marginRight="@dimen/fugu_margin_6">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/message_source_type"
                android:layout_width="@dimen/hippo_margin_16"
                android:layout_height="@dimen/hippo_margin_16"
                android:visibility="gone" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/message_source_type1"
                android:layout_width="@dimen/hippo_margin_16"
                android:layout_height="@dimen/hippo_margin_16"
                android:src="@drawable/hippo_ic_messenger"
                android:visibility="gone" />

        </LinearLayout>


        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/llImageMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvName"
            android:layout_toStartOf="@+id/user_image"
            android:layout_toLeftOf="@+id/user_image"
            android:background="@drawable/hippo_chat_self_bg"
            android:gravity="end"
            android:orientation="vertical"
            android:padding="@dimen/fugu_margin_3">

            <RelativeLayout
                android:id="@+id/rlImageMessage"
                android:layout_width="220dp"
                android:layout_height="220dp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivImageMsg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:transitionName="@string/hippo_activity_image_trans"
                    app:srcCompat="@drawable/hippo_placeholder" />

                <ImageView
                    android:id="@+id/ivPlay"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/hippo_circle_play_blur"
                    android:paddingStart="18dp"
                    android:paddingLeft="18dp"
                    android:paddingTop="@dimen/fugu_margin_15"
                    android:paddingEnd="@dimen/fugu_margin_15"
                    android:paddingRight="@dimen/fugu_margin_15"
                    android:paddingBottom="@dimen/fugu_margin_15"
                    android:visibility="gone"
                    app:srcCompat="@drawable/hippo_ic_play_video" />

                <LinearLayout
                    android:id="@+id/llDownload"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/hippo_round_transparent_capsule"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/fugu_margin_5"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tvFileSize"
                        style="@style/receivedText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12 MB"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/ivDownload"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="@dimen/fugu_margin_3"
                        android:layout_marginLeft="@dimen/fugu_margin_3"
                        app:srcCompat="@drawable/hippo_download_file_retry" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="@dimen/fugu_margin_5"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnRetry"
                        style="@style/receivedText"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/fugu_retry_btn_selector"
                        android:paddingLeft="@dimen/fugu_padding_10"
                        android:paddingTop="@dimen/fugu_padding_5"
                        android:paddingRight="@dimen/fugu_padding_5"
                        android:paddingBottom="@dimen/fugu_padding_5"
                        android:text="@string/fugu_retry"
                        android:visibility="gone" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnCancel"
                        style="@style/receivedText"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/fugu_margin_10"
                        android:layout_marginBottom="@dimen/fugu_margin_5"
                        android:background="@drawable/fugu_retry_btn_selector"
                        android:paddingStart="@dimen/fugu_padding_10"
                        android:paddingLeft="@dimen/fugu_padding_10"
                        android:paddingTop="@dimen/fugu_padding_5"
                        android:paddingEnd="@dimen/fugu_padding_5"
                        android:paddingRight="@dimen/fugu_padding_5"
                        android:paddingBottom="@dimen/fugu_padding_5"
                        android:text="@string/fugu_cancel"
                        android:visibility="gone" />

                </LinearLayout>


                <com.hippo.utils.loadingBox.ProgressWheel
                    android:id="@+id/circle_progress"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerInParent="true"
                    android:visibility="gone"
                    wheel:matProg_barColor="#ffffff"
                    wheel:matProg_barWidth="2dp"
                    wheel:matProg_fillRadius="false"
                    wheel:matProg_progressIndeterminate="true" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/hippo_tiangle_bg"
                    android:gravity="end|bottom"
                    android:minWidth="110dp"
                    android:orientation="horizontal"
                    android:padding="@dimen/fugu_margin_3"
                    android:paddingEnd="@dimen/fugu_margin_12"
                    android:paddingRight="@dimen/fugu_margin_12"
                    android:paddingBottom="@dimen/fugu_margin_12">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvImageTime"
                        style="@style/receivedText.time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="@dimen/fugu_margin_8" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivMessageState"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/fugu_margin_3"
                        android:layout_marginLeft="@dimen/fugu_margin_3"
                        android:layout_marginTop="@dimen/fugu_margin_10"
                        android:layout_toRightOf="@id/tvImageTime"
                        android:paddingTop="@dimen/fugu_padding_3"
                        android:paddingBottom="@dimen/fugu_padding_3"
                        android:visibility="visible"
                        app:srcCompat="@drawable/fugu_tick_single" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/hippo_margin_16"
                        android:layout_height="@dimen/hippo_margin_16"
                        android:layout_marginStart="@dimen/fugu_margin_3"
                        android:layout_marginLeft="@dimen/fugu_margin_3"
                        android:layout_marginTop="@dimen/fugu_margin_10"
                        android:layout_toEndOf="@id/ivMessageState"
                        android:layout_toRightOf="@id/ivMessageState"
                        android:visibility="gone" />


                </RelativeLayout>

            </RelativeLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvImgWithText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:textColor="#000"
                android:textSize="17sp"
                android:visibility="gone"

                />
        </androidx.appcompat.widget.LinearLayoutCompat>


    </RelativeLayout>

</androidx.appcompat.widget.LinearLayoutCompat>