<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:wheel="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:id="@+id/main_layout"
                android:background="@android:color/black">

    <ImageView
            android:id="@+id/ivMsgImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/hippo_placeholder"
            android:visibility="gone" />

    <com.hippo.utils.zoomview.ZoomageView
            android:id="@+id/ivOriginalImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:paddingBottom="@dimen/fugu_padding_10"
            android:paddingLeft="@dimen/fugu_padding_10"
            android:paddingRight="@dimen/fugu_padding_10"
            android:paddingTop="30dp" />

    <com.hippo.utils.loadingBox.ProgressWheel
            android:id="@+id/progress"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:visibility="visible"
            wheel:matProg_barColor="#FFFFFF"
            wheel:matProg_barWidth="2dp"
            wheel:matProg_fillRadius="false"
            wheel:matProg_progressIndeterminate="true" />


    <LinearLayout
            android:id="@+id/llTopBar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/black_opaque_bar"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="10dp">

        <ImageView
                android:id="@+id/ivBack"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-5dp"
                android:layout_marginStart="-5dp"
                android:layout_weight="0.1"
                android:src="@drawable/hippo_ic_white_arrow_back" />

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/fugu_margin_5"
                android:paddingStart="@dimen/fugu_margin_5"
            android:paddingLeft="@dimen/fugu_margin_5">

            <TextView
                    android:id="@+id/tvChannelName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/hippo_white"
                    android:textSize="16sp" />

            <TextView
                    android:id="@+id/tvDateTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/hippo_white"
                    android:textSize="12sp" />
        </LinearLayout>

        <ImageView
                android:id="@+id/ivDownload"
                android:layout_width="0dp"
                android:layout_height="18dp"
                android:layout_weight="0.1"
                android:src="@drawable/hippo_download"
                android:tint="@color/hippo_white"
                android:visibility="visible" />

    </LinearLayout>
</RelativeLayout>