<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/fugu_white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/support_text_view"
            style="@style/hippo.text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/hippo_ic_support_right_arrow"
            android:gravity="center_vertical"
            android:minHeight="@dimen/fugu_min_height"
            android:textSize="@dimen/fugu_text_size_normal" />

        <View
            android:id="@+id/viewDivider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/rlRoot"
            android:background="@color/fugu_border_color" />


    </LinearLayout>


</LinearLayout>
