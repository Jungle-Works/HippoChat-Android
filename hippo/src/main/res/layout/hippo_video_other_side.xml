<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/fugu_margin_2"
    android:layout_marginTop="@dimen/fugu_margin_20">


    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/other_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/fugu_margin_5"
        android:layout_marginEnd="55dp"
        android:layout_marginRight="55dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/user_image"
                style="@style/user_image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tvUserName"
                style="@style/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginEnd="5dp"
                android:layout_toRightOf="@+id/user_image"
                android:gravity="start"
                android:singleLine="true"
                android:text="Gurmail"
                android:layout_marginRight="5dp"
                android:layout_toEndOf="@+id/user_image" />


            <LinearLayout
                android:id="@+id/llMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvUserName"
                android:layout_toRightOf="@+id/user_image"
                android:background="@drawable/hippo_call_other"
                android:orientation="vertical"
                android:padding="@dimen/fugu_dp_8"
                android:layout_toEndOf="@+id/user_image">

                <com.hippo.customLayout.ChatRelativeLayout
                    android:id="@+id/rlMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:child="@+id/llTime"
                    app:parent="@+id/tvMsg">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvMsg"
                        style="@style/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="@dimen/fugu_padding_5"
                        android:textAppearance="@style/CustomTextAppearance.TitilliumWebSemiBold"
                        android:textColor="@color/fugu_white"
                        android:textColorLink="@color/fugu_primary_text_msg_from"
                        android:textSize="@dimen/fugu_text_size_medium"
                        tools:text="The video call ended"
                        android:paddingEnd="@dimen/fugu_padding_5" />
                </com.hippo.customLayout.ChatRelativeLayout>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/llTime"
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/tvMsg"
                    android:layout_gravity="end"
                    android:layout_marginTop="@dimen/fugu_margin_2"
                    android:gravity="end"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:gravity="start"
                        android:orientation="horizontal"
                        android:visibility="visible">

                        <ImageView
                            android:id="@+id/ivCallIcon"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginTop="3dp"
                            android:visibility="visible"
                            app:srcCompat="@drawable/hippo_ic_missed_call" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvDuration"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/fugu_margin_5"
                            android:breakStrategy="simple"
                            android:textAppearance="@style/CustomTextAppearance.TitilliumWeb"
                            android:textColor="@color/fugu_white"
                            android:textSize="@dimen/fugu_text_size_11"
                            android:visibility="visible"
                            android:layout_marginLeft="@dimen/fugu_margin_5" />
                    </LinearLayout>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvTime"
                        style="@style/receivedText.time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginLeft="4dp"
                        android:layout_marginBottom="@dimen/fugu_margin_2"
                        android:breakStrategy="simple"
                        android:gravity="end"
                        android:textAppearance="@style/CustomTextAppearance.TitilliumWeb"
                        android:textColor="@color/fugu_white"
                        android:layout_marginStart="4dp" />
                </androidx.appcompat.widget.LinearLayoutCompat>

                <View
                    android:id="@+id/call_divider"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="@dimen/fugu_margin_2"
                    android:background="@color/divider_color" />

                <TextView
                    android:id="@+id/callAgain"
                    style="@style/title"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="@string/call_again"
                    android:textColor="@color/fugu_white"
                    android:textSize="@dimen/fugu_text_size_normal" />

            </LinearLayout>

        </RelativeLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>

</RelativeLayout>