<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/fugu_dp_35"
    android:layout_marginRight="@dimen/fugu_dp_35"
    android:orientation="horizontal"
    android:paddingTop="@dimen/fugu_margin_1"
    android:paddingBottom="@dimen/fugu_margin_1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/user_image"
            style="@style/user_image"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:gravity="top" />

        <TextView
            android:id="@+id/tvUserName"
            style="@style/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginEnd="5dp"
            android:gravity="start"
            android:singleLine="true"
            android:layout_toRightOf="@+id/user_image"
            android:text="Gurmail"
            android:layout_marginRight="5dp"
            android:layout_toEndOf="@+id/user_image" />


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvUserName"
            android:layout_marginRight="@dimen/fugu_margin_6"
            android:layout_toRightOf="@+id/user_image"
            android:shrinkColumns="0"
            android:stretchColumns="1"
            android:layout_marginEnd="@dimen/fugu_margin_6"
            android:layout_toEndOf="@+id/user_image">

            <TableRow
                android:id="@+id/driver_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/fugu_margin_2"
                        app:layout_constraintLeft_toRightOf="@+id/llChatLeft"
                        tools:ignore="MissingConstraints"
                        android:layout_marginStart="@dimen/fugu_margin_2" />


                    <LinearLayout
                        android:id="@+id/llChatLeft"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/fugu_chat_other_bg"
                        android:gravity="start"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/fugu_margin_2"
                        tools:ignore="MissingConstraints">

                        <include
                            layout="@layout/fugu_message_image"
                            android:layout_width="260dp"
                            android:layout_height="250dp"
                            android:layout_marginLeft="@dimen/fugu_margin_10"
                            android:layout_marginRight="@dimen/fugu_margin_10"
                            android:visibility="gone" />

                        <com.hippo.customLayout.ChatRelativeLayout
                            android:id="@+id/rlMessages"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingRight="@dimen/fugu_margin_8"
                            app:child="@+id/llTime"
                            app:parent="@+id/tvMsg"
                            android:paddingEnd="@dimen/fugu_margin_8">

                            <TextView
                                android:id="@+id/tvMsg"
                                style="@style/receivedText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:autoLink="all"
                                android:breakStrategy="simple"
                                android:paddingLeft="@dimen/fugu_dp_8"
                                android:paddingTop="@dimen/fugu_margin_2"
                                android:paddingBottom="@dimen/fugu_margin_4"
                                android:textColorLink="@color/fugu_white"
                                android:textIsSelectable="false"
                                tools:text="R"
                                android:paddingStart="@dimen/fugu_dp_8" />

                            <LinearLayout
                                android:id="@+id/llTime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignBottom="@+id/tvMsg"
                                android:layout_gravity="end|right|bottom"
                                android:layout_marginLeft="@dimen/fugu_margin_3"
                                android:layout_marginBottom="@dimen/fugu_margin_3"
                                android:gravity="center|right"
                                android:orientation="horizontal"
                                android:visibility="visible"
                                android:layout_marginStart="@dimen/fugu_margin_3">

                                <TextView
                                    android:id="@+id/tvTime"
                                    style="@style/receivedText.time"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical|end"
                                    android:breakStrategy="simple"
                                    android:text="12:38 PM "
                                    />

                            </LinearLayout>

                        </com.hippo.customLayout.ChatRelativeLayout>
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <LinearLayout
                    android:id="@+id/ll_source_type"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignBottom="@+id/clayout"
                    android:layout_marginBottom="4dp"
                    android:gravity="left|bottom">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/message_source_type"
                        android:layout_width="@dimen/hippo_margin_16"
                        android:layout_height="@dimen/hippo_margin_16"
                        android:visibility="gone" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/message_source_type1"
                        android:layout_width="@dimen/hippo_margin_16"
                        android:layout_height="@dimen/hippo_margin_16"
                        android:src="@drawable/hippo_ic_messenger"
                        android:visibility="gone" />



                </LinearLayout>

            </TableRow>
        </TableLayout>


    </RelativeLayout>
</LinearLayout>