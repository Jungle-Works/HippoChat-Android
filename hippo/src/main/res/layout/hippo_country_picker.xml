<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

  <EditText
      android:id="@+id/country_code_picker_search"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@android:color/transparent"
      android:drawableLeft="@drawable/hippo_ic_search"
      android:drawableStart="@drawable/hippo_ic_search"
      android:hint="@string/hippo_search"
      android:imeOptions="actionSearch"
      android:maxLines="1"
      android:padding="16dp"
      android:visibility="gone"
      />

  <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/countries_recycler_view"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      />

</LinearLayout>
