<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:wheel="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical">

    <RelativeLayout
            android:id="@+id/my_toolbar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/fugu_white"
            android:elevation="@dimen/fugu_elevation_4">


        <ImageView
                android:id="@+id/ivBackBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:onClick="onClick"
                android:padding="@dimen/fugu_margin_6"
                android:layout_marginEnd="@dimen/fugu_margin_6"
                android:src="@drawable/ic_hippo_close"
                android:visibility="visible" />

        <TextView
                android:id="@+id/tv_toolbar_name"
                style="@style/CustomTextAppearance.Semibold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="start|center_vertical"
                android:singleLine="true"
                android:text="@string/hippo_payment_title"
                android:textSize="@dimen/fugu_text_size_large" />

    </RelativeLayout>

    <ProgressBar
            android:id="@+id/pbWebPageLoader"
            style="@android:style/Widget.Holo.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:indeterminateOnly="true"
            android:scaleY="5" />

    <WebView
            android:id="@+id/webView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:visibility="gone"
            android:focusableInTouchMode="true" />

    <RelativeLayout
            android:id="@+id/loadingLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            >

        <com.hippo.utils.loadingBox.ProgressWheel
                android:id="@+id/circle_progress"
                android:layout_width="50dp"
                android:layout_height="50dp"
                wheel:matProg_barColor="#80000000"
                android:layout_centerHorizontal="true"
                wheel:matProg_barWidth="2dp"
                wheel:matProg_fillRadius="false"
                wheel:matProg_progressIndeterminate="true" />

        <TextView
                android:id="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/circle_progress"
                android:layout_marginTop="@dimen/fugu_margin_10"
                android:gravity="center"
                android:text="@string/hippo_payment_loader"
                android:textColor="@color/fugu_text_color_primary" />


    </RelativeLayout>

</LinearLayout>